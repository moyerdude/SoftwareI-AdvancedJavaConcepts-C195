<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="527.0" prefWidth="883.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CustomerListController">
   <children>
      <Label layoutX="28.0" layoutY="22.0" text="This is the customer list" />
      <TableView fx:id="customerTable" layoutX="46.0" layoutY="64.0" prefHeight="341.0" prefWidth="804.0">
        <columns>
          <TableColumn fx:id="customerID" prefWidth="87.0" text="Customer ID" />
          <TableColumn fx:id="customerName" prefWidth="148.0" text="Name" />
            <TableColumn fx:id="customerAddress" prefWidth="137.0" text="Address" />
            <TableColumn fx:id="customerZip" prefWidth="86.0" text="Zip" />
            <TableColumn fx:id="customerPhone" minWidth="1.0" prefWidth="123.0" text="Phone" />
            <TableColumn fx:id="customerState" minWidth="1.0" prefWidth="112.0" text="State" />
            <TableColumn fx:id="customerCountry" minWidth="1.0" prefWidth="110.0" text="Country" />
        </columns>
      </TableView>
      <Button fx:id="addCustomer" layoutX="48.0" layoutY="436.0" mnemonicParsing="false" onAction="#addCustomerAction" text="Add Customer" />
      <Button fx:id="modifyCustomer" layoutX="171.0" layoutY="436.0" mnemonicParsing="false" onAction="#modifyCustomerAction" text="Modify Customer" />
      <Button fx:id="backButton" layoutX="723.0" layoutY="436.0" mnemonicParsing="false" onAction="#backButtonAction" text="Back" />
      <Button fx:id="deleteCustomer" layoutX="315.0" layoutY="436.0" mnemonicParsing="false" onAction="#deleteCustomerAction" text="Delete Customer" />
   </children>
</AnchorPane>
